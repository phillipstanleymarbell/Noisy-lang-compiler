time : signal =
{
    name = "second" English
    symbol = "s";
    derivation = none;
}

distance : signal(n: 0 to 2) =
{
    name = "meter" English
    symbol = "m";
    derivation = none;
}

speed : signal(n: 0 to 2) =
{
    derivation = distance@n / time;
}

acceleration : signal(n: 0 to 2) =
{
    derivation = speed@n / time;
}

AccelerationRange : invariant(X: acceleration@0, Y: acceleration@1, Z: acceleration@2)
{
    X >= -2 * meter / second ** 2,
    X <= 2 * meter / second ** 2,
    Y >= -1 * meter / second ** 2,
    Y <= 1 * meter / second ** 2,
    Z ~ 0 * meter / second ** 2
}
